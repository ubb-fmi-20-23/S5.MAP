<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
			 xmlns:m="urn:import:gwt.material.design.client.ui">
	<ui:style>
		.block{
			display: block;
			padding: 20px;
		}
	</ui:style>
	<m:MaterialColumn grid="s12 m12 l10">
	    <m:MaterialCard backgroundColor="blue">
			<m:MaterialCardTitle text="Colored Line Chart" iconType="MORE_VERT" iconPosition="RIGHT" textColor="white" addStyleNames="{style.block}"/>
			<m:MaterialCardContent ui:field="cardContent" addStyleNames="no-padding"/>
				
			<m:MaterialCardReveal>
				<m:MaterialCardTitle text="Colored Line Chart" iconType="CLOSE" iconPosition="RIGHT" textColor="black"/>
				<m:MaterialLabel text="Here is some more information about this product that is only revealed once clicked on." />
			</m:MaterialCardReveal>
				
			<m:MaterialCardAction>
				<m:MaterialLink target="_blank" href="https://github.com/GwtMaterialDesign/gwt-material-demo/blob/master/src/main/java/gwt/material/design/demo/client/ui/charts/MaterialColoredLineChart.ui.xml" text="UI Binder" textColor="white" />
				<m:MaterialLink target="_blank" href="https://github.com/GwtMaterialDesign/gwt-material-demo/blob/master/src/main/java/gwt/material/design/demo/client/ui/charts/MaterialColoredLineChart.java" text="Java" textColor="white" />
			</m:MaterialCardAction>
		</m:MaterialCard>
	</m:MaterialColumn>
</ui:UiBinder> 